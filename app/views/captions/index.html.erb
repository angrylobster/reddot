<p id="notice"><%= notice %></p>

<h1>Captions</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @captions.each do |caption| %>
      <tr>
        <td><%= caption.body %></td>
        <td><%= link_to 'Show', caption %></td>
        <td><%= link_to 'Edit', edit_caption_path(caption) %></td>
        <td><%= link_to 'Destroy', caption, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Caption', new_caption_path %>
